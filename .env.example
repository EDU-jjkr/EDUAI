PORT=3001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/edu_platform

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# Supabase (legacy - being replaced by Keycloak)
SUPABASE_URL=your_supabase_project_url
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Keycloak Authentication
KEYCLOAK_REALM_URL=http://your-vm-ip:8080/realms/edu-platform
KEYCLOAK_CLIENT_ID=edu-backend

# AI Service - DO NOT HARDCODE localhost in code!
AI_SERVICE_URL=http://127.0.0.1:8000
AI_SERVICE_TIMEOUT=15000

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# CORS
CORS_ORIGIN=http://localhost:3000
